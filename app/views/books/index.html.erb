<h1>Books</h1>
<div class="index">
  
  <table>
   <thead>
     <th>Title</th>
     <th>body</th>
     <th colspan="3"></th>
 　 </thead>
 　 
 　<tbody>
 　  <% @books.each do |book| %>
      <tr>
       <td>楽しいRuby</td>
       <td>初心者のプログラミング<td>
       <td>show<td>
       <td>edit<td>
       <td>destroy<td>
      </tr>
      
    <% end %>
   </tbody>
   
　</table>
  
</div>
<h2>New book</h2>
<%= form_with model:@book, url:'/books', local:true do |f| %>
  <div class="field">
    <h4>Title</h4>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <h4>Body</h4>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>



