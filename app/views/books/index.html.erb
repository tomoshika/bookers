<h1>Books</h1>
  
  <table>
   <thead>
     <th>Title</th>
     <th>body</th>
     <th colspan="3"></th>
 　 </thead>
 　 
 　<tbody>
 　  <% @books.each do |book| %>
      <tr>
       <td><%= book.title %></td>
       <td><%= book.body %><td>
       <td><%= link_to "Show", book_path(book.id), class: "link" %><td>
       <td><%= link_to "Edit", edit_book_path(book.id), class: "link" %><td>
       <td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?", class: "link"%><td>
      </tr>
    <% end %>
   </tbody>
   
　</table>
  
<h2>New book</h2>
<%= form_with model:@book, url:'/books', local:true do |f| %>
  <div class="field">
    <h4>Title</h4>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <h4>Body</h4>
    <%= f.text_area :body %>
  </div>
  <%= f.submit 'Create Book' , class: "actions"%>
  
<% end %>



